{
  "compilerOptions": {
    "lib": [
      "es2022"
    ],
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2022",
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}
